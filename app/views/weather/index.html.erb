<div class="col s12 m7">
    <h3 class="header">Weather for <%= @ReportingArea %>, <%= @ReportingState %></h3>
        <div class="card horizontal">
        <div class="card-stacked">
            <div class="card-content">
            <p>Your current weather is <%= @weathertemptoday %>°F with <%= @weatherdescriptiontoday %></p>
            <p>Your current air quality is <%= @AQIQuality %> with an Air Quality Index of <%= @air_quality %></p>
        </div>
        <div class="divider"></div>
        <div class="card-content">
            </p>Your weather forecast for tomorrow is <%= @weathertemptmrw %>°F with <%= @weatherdescriptiontmrw %></p>
        </div>
        </div>
    </div>
</div>
<br>
<div class="row">
    <form class="col s10">
        <div class="row">
            <div class="card-stacked">
            <%= form_with(url: search_path, method: 'post', local: true) do %>
                <div class="form-group">
                    <%= label_tag :zipcode, 'Search another zipcode' %>
                    <%= text_field_tag :zipcode, nil %>
                </div>
            <% end %>
            </div>
        </div>
    </form>
</div>