<div class="col s12 m7">
    <h3 class="header">Find your weather</h3>
    <div class="card horizontal">
        <div class="card-stacked">
        <%= form_with(url: search_path, method: 'post', local: true) do %>
            <div class="form-group">
                <%= label_tag :zipcode, 'Search a zipcode' %>
                <%= text_field_tag :zipcode, nil %>
            </div>
        <% end %>
        </div>
    </div>
</div>